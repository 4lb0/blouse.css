{
  "name": "blouse.css",
  "version": "1.0.0",
  "description": "a lightweight mobile first css framework",
  "keywords": [
    "css",
    "sass",
    "mobile-first",
    "responsive",
    "front-end",
    "framework",
    "web"
  ],
  "author": "Rodrigo 'Albo' Arce <albo@pragmore.com>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/4lb0/blouse.css.git"
  },
  "license": "MIT",
  "devDependencies": {
    "http-server": "^13.0.2",
    "livereload": "^0.9.3",
    "npm-run-all": "^4.1.5",
    "sass": "^1.43.4"
  },
  "scripts": {
    "livereload": "livereload -ee 'json'",
    "font-build": "cp font/*.woff dist/",
    "css-build": "sass --style compressed --no-source-map scss/:dist/",
    "css-watch": "npm run css-build -- --watch",
    "build": "npm run css-build && npm run font-build",
    "serve": "http-server . -c-1",
    "start": "npm-run-all --parallel livereload css-watch font-build serve"
  },
  "dependencies": {
    "semver": "^6.3.0"
  }
}
